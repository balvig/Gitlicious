<%= simple_form_for(@project, :html => {:novalidate => true}) do |f| %>
  <fieldset>
    <div class="clearfix">
      <%= f.label :repo_url %>
      <%= f.input :repo_url, :label => false, :placeholder => 'Ex: git://github.com/balvig/gitlicious.git', :input_html => {:class => 'span6'} %>
    </div>
    <div class="clearfix">
      <%= f.label :github_url %>
      <%= f.input :github_url, :label => false, :placeholder => 'Optional. Will link problems to Github.', :input_html => {:class => 'span6'} %>
    </div>
    <div class="actions">
      <%= f.submit :class => 'btn primary', :disable_with => 'Cloning...' %>
      <%= link_to 'Back', projects_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
