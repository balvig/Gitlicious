<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Gitlicious</title>
  <%= stylesheet_link_tag "http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css"%>
  <%= stylesheet_link_tag :all %>
  <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  <%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js','libs/jquery.flot','libs/jquery.flot.graph','libs/rails','http://twitter.github.com/bootstrap/1.3.0/bootstrap-alerts.js','http://twitter.github.com/bootstrap/1.3.0/bootstrap-tabs.js','application'%>
  <%= csrf_meta_tag %>
</head>
<html>
<body>
  <div class="topbar">
    <div class="topbar-inner">
      <div class="container-fluid">
        <%= link_to "Gitlicious", root_path, :class => 'brand' %>
        <!--ul class="nav">
          <li><%= link_to "Projects", projects_path %></li>
        </ul-->
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="content">

      <% if current_author %>
        <div id='current_author' class='author'>
          <%= link_to image_tag(avatar_url(current_author, 40), :alt => current_author.name), [current_author, :projects] %>
          <div>
            <h4><%= current_author.name %></h4>
            <p><%= current_author.email %></p>
          </div>
        </div>
      <% end %>

      <% flash.each do |key, value|%>
        <div class="alert-message <%= key %>" data-alert='alert'>
          <a class="close" href="#">Ã—</a>
          <p><%= value %></p>
        </div>
      <% end %>
      <%= yield %>

      <footer>
        <p>&copy; COOKPAD Inc. 2011</p>
      </footer>
    </div>
  </div>
</body>
</html>
