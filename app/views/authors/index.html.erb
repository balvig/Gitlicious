<div class="page-header">
  <h1>Sign In</h1>
</div>


<ul class="authors">
  <% @authors.each do |author| %>
    <li>
      <%= link_to author do %>
        <%= image_tag(avatar_url(author, 45), :alt => author.name, :size => '45x45') %>
        <div>
          <h4><%= author.name %></h4>
          <p>&lt;<%= author.email %>&gt;</p>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
